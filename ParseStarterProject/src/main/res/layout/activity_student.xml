<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/student"
    android:visibility="visible"
    tools:context="com.parse.starter.student">

    <GridLayout
        android:layout_width="368dp"
        android:layout_height="317dp"
        android:layout_marginBottom="97dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="97dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/button7"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:alpha="0.6"
            android:onClick="leave"
            android:text="Leave\nApplication"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button8"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:alpha="0.63"
            android:onClick="complain"
            android:text="Complaint\nForm"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button9"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:alpha="0.6"
            android:onClick="status"
            android:text="Request\nStatus"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button10"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:alpha="0.6"
            android:onClick="edit"

            android:text="Edit\nProfile"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

    </GridLayout>
</android.support.constraint.ConstraintLayout>
